---
import Background from '../components/Background.astro';
---

<!DOCTYPE html>
<html lang="en" class="bg-[#111] h-full overflow-hidden">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="description" content="Redirecting you to the best-matched language page for Sakasu Portfolio." />
    <title>Initializing...</title>
</head>
<body class="h-full m-0 flex flex-col items-center justify-center text-white relative">

    <Background />

    <div class="z-10 flex flex-col items-center gap-4 animate-fade-in">
        
        <div class="text-2xl font-bold tracking-widest text-transparent bg-clip-text bg-gradient-to-r from-blue-400 to-white animate-pulse">
            LOADING...
        </div>

        <div class="w-48 h-1 bg-gray-800 rounded-full overflow-hidden relative">
            <div class="absolute top-0 left-0 h-full bg-blue-500 w-0 animate-progress"></div>
        </div>
        
    </div>

    <script>
        function toRouteLang(langTag) {
            const tag = String(langTag || '').toLowerCase();
            if (tag.startsWith('ja') || tag.startsWith('jp')) return 'jp';
            if (tag.startsWith('zh')) return 'zh';
            if (tag.startsWith('en')) return 'en';
            return '';
        }

        function detectPreferredLang() {
            const preferred = Array.isArray(navigator.languages) && navigator.languages.length
                ? navigator.languages
                : [navigator.language];

            for (const langTag of preferred) {
                const mapped = toRouteLang(langTag);
                if (mapped) return mapped;
            }

            return 'en';
        }

        const targetUrl = `/${detectPreferredLang()}/`;

        // Wait 1.2 seconds for the animation to play, then switch
        setTimeout(() => {
            // .replace() is better than .href because it prevents 
            // the user from clicking "Back" and getting stuck on the loading screen.
            window.location.replace(targetUrl);
        }, 1200);
    </script>

    <style>
        /* Simple Fade In */
        .animate-fade-in {
            animation: fadeIn 0.5s ease-out forwards;
            opacity: 0;
        }

        @keyframes fadeIn {
            to { opacity: 1; }
        }

        /* The Progress Bar Animation */
        .animate-progress {
            animation: loadBar 1.2s ease-in-out forwards;
        }

        @keyframes loadBar {
            0% { width: 0%; }
            50% { width: 70%; }
            100% { width: 100%; }
        }
    </style>

</body>
</html>
