---
import Layout from '../../layouts/Layout.astro';
import { ui, languages } from '../../i18n/ui';
import Timeline from '../../components/Timeline.astro';

export function getStaticPaths() {
  return Object.keys(languages).map((lang) => ({ params: { lang } }));
}

const { lang } = Astro.params;
const t = ui[lang as keyof typeof ui];
---

<Layout title="My Portfolio" lang={lang}>
	
    <section class="py-20 md:py-32">
        <div class="flex flex-col md:flex-row items-center gap-10">
            
            <div class="flex-shrink-0">
                <img 
                    src="/sakasu.jpg" 
                    alt="Profile Picture" 
                    class="w-40 h-40 md:w-56 md:h-56 rounded-full object-cover border-4 border-gray-800 shadow-2xl"
                />
            </div>

            <div class="text-center md:text-left">
                <h1 class="text-5xl md:text-6xl font-extrabold bg-gradient-to-r from-white to-gray-600 bg-clip-text text-transparent pb-4 leading-tight">
                    {t['hero.title']}
                </h1>
                <p class="text-xl text-gray-400 mt-4 max-w-lg leading-relaxed">
                    {t['hero.subtitle']}
                </p>
                
                <div class="mt-6 flex gap-4 justify-center md:justify-start">
                    <a href="#" class="text-gray-400 hover:text-white transition-colors">GitHub</a>
                    <a href="#" class="text-gray-400 hover:text-white transition-colors">Twitter</a>
                </div>
            </div>

        </div>
    </section>

    <section class="mt-12">
        <h2 class="text-sm font-bold text-blue-500 uppercase tracking-widest mb-8">
            {t['nav.work']}
        </h2>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div class="p-6 rounded-xl border border-gray-800 bg-[#161616] hover:border-blue-500/50 hover:bg-[#1a1a1a] transition-all group">
                <div class="h-40 bg-gray-800 rounded mb-4 w-full"></div> 
                <h3 class="text-xl font-bold mb-2 group-hover:text-blue-400 transition-colors">Project Alpha</h3>
                <p class="text-gray-400 text-sm">{t['project.alpha']}</p>
            </div>
            </div>
    </section>

    <section class="mt-24 mb-24">
        <h2 class="text-3xl font-bold mb-8 text-white">{t['timeline.title']}</h2>
        <Timeline lang={lang} /> 
    </section>

</Layout>