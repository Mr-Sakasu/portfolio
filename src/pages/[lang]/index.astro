---
import { Image } from 'astro:assets';
import Layout from '../../layouts/Layout.astro';
import { ui, languages } from '../../i18n/ui';
import Timeline from '../../components/Timeline.astro';
import { projectData } from '../../data/projects';
import profileImage from '../../assets/sakasu.jpg';
import erProjectImage from '../../assets/er.png';

export function getStaticPaths() {
  return Object.keys(languages).map((lang) => ({ params: { lang } }));
}

const { lang } = Astro.params;
const t = ui[lang as keyof typeof ui];
const projects = projectData[lang] || projectData['en'];
const heroTitle = t['hero.title'];
---

<Layout title="Sakasu Portfolio" lang={lang} description={t['hero.subtitle']}>
	
    <section class="py-12 md:py-32">
        <div class="flex flex-col md:flex-row items-center gap-8 md:gap-10">
            
            <div class="flex-shrink-0">
                <Image
                    src={profileImage}
                    alt="Profile Picture"
                    format="webp"
                    sizes="(max-width: 768px) 128px, 224px"
                    widths={[128, 224, 320]}
                    quality={72}
                    loading="eager"
                    fetchpriority="high"
                    class="w-32 h-32 md:w-56 md:h-56 rounded-full object-cover border-4 border-gray-800 shadow-2xl"
                />
            </div>

            <div class="text-center md:text-left">
                <h1 class="text-4xl md:text-6xl font-extrabold bg-gradient-to-r from-white to-gray-600 bg-clip-text text-transparent pb-2 md:pb-4 leading-tight break-words">
                    <span id="hero-typewriter" class="typewriter-title" data-text={heroTitle} aria-label={heroTitle}></span>
                </h1>
                
                <p class="text-lg md:text-xl text-gray-400 mt-4 max-w-lg leading-relaxed mx-auto md:mx-0">
                    {t['hero.subtitle']}
                </p>
                
                <div class="mt-6 flex gap-4 justify-center md:justify-start">
                    <a href="https://github.com/Mr-Sakasu/" target="_blank" class="text-gray-400 hover:text-white transition-colors">GitHub</a>
                </div>
            </div>
        </div>
    </section>

    <section class="mt-2 md:mt-6">
        <h2 class="text-sm font-bold text-blue-400 uppercase tracking-widest mb-2">
            {t['nav.stars']}
        </h2>
        <a href={`/${lang}/stars/`} class="group relative block overflow-hidden rounded-2xl border border-sky-400/25 bg-gradient-to-br from-[#0a1b33] via-[#0b1630] to-[#090f21] px-6 pt-6 pb-0 md:px-7 md:pt-7 md:pb-0 shadow-[0_20px_70px_-35px_rgba(56,189,248,0.65)] hover:border-sky-300/55 hover:shadow-[0_24px_85px_-35px_rgba(56,189,248,0.9)] transition-all">
            <div class="absolute -top-14 -left-14 h-52 w-52 rounded-full bg-sky-400/20 blur-3xl pointer-events-none"></div>
            <div class="absolute -bottom-8 -right-8 h-28 w-28 rounded-full bg-blue-500/15 blur-3xl pointer-events-none"></div>
            <div class="absolute top-6 right-8 h-1.5 w-1.5 rounded-full bg-white/70"></div>
            <div class="absolute top-10 right-16 h-1 w-1 rounded-full bg-sky-100/70"></div>
            <div class="absolute top-14 right-11 h-0.5 w-0.5 rounded-full bg-cyan-200/70"></div>

            <div class="relative z-10 pt-3 md:pt-4">
                <div class="flex items-start justify-between gap-4">
                    <div>
                        <p class="text-[11px] uppercase tracking-[0.18em] text-sky-200/75">{t['stars.sky.time']}</p>
                        <h3 class="mt-3 text-2xl md:text-3xl font-black text-white leading-tight">{t['stars.title']}</h3>
                        <p class="mt-2 text-sm text-slate-300/95 leading-relaxed max-w-xl">{t['stars.subtitle']}</p>
                    </div>
                </div>

                <div class="mt-4">
                    <div class="relative w-full overflow-hidden rounded-xl border border-sky-300/30 bg-[#050914]/80">
                        <iframe
                            src={`/${lang}/stars/`}
                            title={`${t['stars.title']} preview`}
                            loading="lazy"
                            class="pointer-events-none block h-[160px] sm:h-[190px] md:h-[240px] w-full"
                        ></iframe>
                        <div class="pointer-events-none absolute inset-0 bg-gradient-to-t from-[#070b16]/65 via-transparent to-transparent"></div>
                    </div>
                </div>

                <p class="mt-2 -mb-1 inline-flex items-center gap-2 text-sm font-semibold leading-none text-sky-100 group-hover:text-white transition-colors">
                    <span class="inline-flex items-center transition-transform duration-300 group-hover:translate-x-1">
                        {t['home.minigame.play']}
                        <span aria-hidden="true" class="ml-2 inline-block h-1.5 w-1.5 rounded-full bg-current motion-safe:animate-pulse"></span>
                    </span>
                </p>
            </div>
        </a>
    </section>

    <section class="mt-4 md:mt-6">
        <h2 class="text-sm font-bold text-cyan-400 uppercase tracking-widest mb-2">
            {t['home.minigame.title']}
        </h2>
        <p class="text-sm text-gray-400 mb-5">{t['home.minigame.subtitle']}</p>

        <div class="grid grid-cols-1 md:grid-cols-1 gap-4">
            <a href={`/${lang}/bandit/`} class="group rounded-xl border border-blue-500/20 bg-gradient-to-br from-[#10233d] via-[#101a2f] to-[#0d1324] p-5 shadow-lg hover:border-blue-400/50 transition-all">
                <div class="flex items-start justify-between gap-4">
                    <div>
                        <p class="text-xs uppercase tracking-widest text-blue-200/70 mb-2">{t['nav.bandit']}</p>
                        <h3 class="text-lg font-bold text-white leading-snug">{t['bandit.title']}</h3>
                        <p class="mt-2 text-sm text-gray-300 leading-relaxed">{t['bandit.subtitle']}</p>
                    </div>
                    <span class="text-2xl">ðŸŽ°</span>
                </div>
                <p class="mt-4 text-sm text-cyan-200 group-hover:text-white transition-colors">
                    <span class="inline-flex items-center transition-transform duration-300 group-hover:translate-x-1">
                        {t['home.minigame.play']}
                        <span aria-hidden="true" class="ml-2 inline-block h-1.5 w-1.5 rounded-full bg-current motion-safe:animate-pulse"></span>
                    </span>
                </p>
            </a>
        </div>
    </section>

    <section class="mt-12">
        <h2 class="text-sm font-bold text-blue-500 uppercase tracking-widest mb-6 md:mb-8">
            {t['nav.work']}
        </h2>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            {projects.map((project) => (
                <a href={project.link} target="_blank" class="block group">
                    <div class="h-full p-5 md:p-6 rounded-xl border border-gray-800 bg-[#161616]/80 backdrop-blur-md hover:border-blue-500/50 hover:bg-[#1a1a1a] transition-all flex flex-col">
                        
                        <div class="relative w-full h-40 md:h-48 mb-4 overflow-hidden rounded-lg border border-gray-800">
                            {project.image === '/er.png' ? (
                                <Image
                                    src={erProjectImage}
                                    alt={project.title}
                                    format="webp"
                                    sizes="(max-width: 768px) 100vw, 560px"
                                    widths={[320, 560, 840]}
                                    quality={68}
                                    loading="lazy"
                                    class="w-full h-full object-cover transform group-hover:scale-110 transition-transform duration-500"
                                />
                            ) : (
                                <img 
                                    src={project.image} 
                                    alt={project.title} 
                                    loading="lazy"
                                    decoding="async"
                                    class="w-full h-full object-cover transform group-hover:scale-110 transition-transform duration-500"
                                />
                            )}
                        </div>

                        <div class="flex-grow">
                            <h3 class="text-lg md:text-xl font-bold mb-2 group-hover:text-blue-400 transition-colors">
                                {project.title}
                            </h3>
                            <p class="text-gray-400 text-sm mb-4 leading-relaxed">
                                {project.desc}
                            </p>
                        </div>

                        <div class="flex flex-wrap gap-2 mt-auto">
                            {project.tags.map((tag) => (
                                <span class="text-xs bg-gray-800 text-gray-300 px-2 py-1 rounded">
                                    {tag}
                                </span>
                            ))}
                        </div>
                    </div>
                </a>
            ))}
        </div>
    </section>

    <section class="mt-16 md:mt-24 mb-24">
        <h2 class="text-2xl md:text-3xl font-bold mb-8 text-white">{t['timeline.title']}</h2>
        <Timeline lang={lang} /> 
    </section>

</Layout>

<script is:inline>
    const runHeroTypewriter = () => {
        const el = document.getElementById('hero-typewriter');
        if (!(el instanceof HTMLElement)) return;

        if (typeof window.__heroTypewriterDoneTimer === 'number') {
            window.clearTimeout(window.__heroTypewriterDoneTimer);
        }
        if (typeof window.__heroTypewriterFinalTimer === 'number') {
            window.clearTimeout(window.__heroTypewriterFinalTimer);
        }

        const fullText = el.dataset.text ?? '';
        const reduceMotion = window.matchMedia('(prefers-reduced-motion: reduce)').matches;

        if (reduceMotion) {
            el.textContent = fullText;
            el.classList.add('done');
            return;
        }

        el.textContent = '';
        el.classList.remove('done');

        let index = 0;
        const typeNext = () => {
            if (index >= fullText.length) {
                el.classList.add('done');
                window.__heroTypewriterDoneTimer = window.setTimeout(() => {
                    el.classList.remove('done');
                    window.__heroTypewriterFinalTimer = window.setTimeout(() => {
                        el.classList.add('done');
                    }, 1200);
                }, 250);
                return;
            }
            index += 1;
            el.textContent = fullText.slice(0, index);
            window.setTimeout(typeNext, 150);
        };

        window.setTimeout(typeNext, 180);
    };

    runHeroTypewriter();
    if (!window.__heroTypewriterHookAttached) {
        document.addEventListener('astro:page-load', runHeroTypewriter);
        window.__heroTypewriterHookAttached = true;
    }
</script>

<style>
    .typewriter-title {
        display: inline-block;
        white-space: nowrap;
        vertical-align: bottom;
        min-height: 1em;
        padding-right: 0.08em;
        border-right: 0.08em solid rgba(226, 232, 240, 0.95);
        animation: typewriter-caret 1.05s step-end infinite;
    }

    @keyframes typewriter-caret {
        0%, 49% { border-right-color: rgba(226, 232, 240, 0.95); }
        50%, 100% { border-right-color: transparent; }
    }

    .typewriter-title.done {
        animation: none;
        border-right-color: transparent;
    }

    @media (prefers-reduced-motion: reduce) {
        .typewriter-title {
            border-right: none;
            animation: none;
        }
    }
</style>
